{
  "name": "cryptoscam-report",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "shared",
    "worker",
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently -n worker,frontend -c blue,green \"npm run dev --workspace=worker\" \"npm run dev --workspace=frontend\"",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:worker": "npm run dev --workspace=worker",
    "build": "npm run build --workspace=shared && npm run build --workspaces --if-present",
    "build:frontend": "npm run build --workspace=frontend",
    "build:worker": "npm run build --workspace=worker",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format:check": "prettier --check .",
    "format": "prettier --write .",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "ci": "npm run lint && npm run format:check && npm run typecheck && npm run test && npm run build:frontend",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.3",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "concurrently": "^9.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.0",
    "globals": "^15.0.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,html}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
